<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:background="@drawable/fondo"
			 tools:context=".CambiarPwd">
	
	<!-- TODO: Update blank fragment layout -->
	<EditText

		android:id="@+id/pwdActual"
		android:layout_width="253dp"
		android:layout_height="42dp"
		android:layout_marginTop="96dp"
		android:background="#11000000"
		android:drawableLeft="@drawable/icono_pwd"
		android:hint="Contraseña Actual"
		android:inputType="textPassword"
		android:textAlignment="center"
		android:textColor="#000"
		android:textColorHint="#5b5b5b"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.495"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	
	<EditText
			android:layout_width="253dp"
			android:inputType="textPassword"
			android:drawableLeft="@drawable/icono_pwd"
			android:layout_height="42dp"
			android:textAlignment="center"
			app:layout_constraintEnd_toEndOf="parent"
			android:background="#11000000"
			android:hint="Nueva Contraseña"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="0.497"
			android:layout_marginTop="80dp"
			app:layout_constraintTop_toBottomOf="@+id/pwdActual"
			android:textColorHint="#5b5b5b"
			android:id="@+id/nuevaPwd"/>
	
	<EditText
			android:id="@+id/confirmarPwd"
			android:drawableLeft="@drawable/icono_pwd"
			android:layout_width="253dp"
			android:layout_height="42dp"
			android:textColorHint="#5b5b5b"
			android:inputType="textPassword"
			app:layout_constraintEnd_toEndOf="parent"
			android:background="#11000000"
			android:hint="Confirmar Contraseña"
			android:textAlignment="center"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="0.497"
			android:layout_marginTop="80dp"
			app:layout_constraintTop_toBottomOf="@+id/nuevaPwd"/>

	<Button
		android:id="@+id/btnCambiarContraseña"
		android:layout_width="187dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="72dp"
		android:background="@drawable/botones_gradient"
		android:text="Cambiar Contraseña"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.502"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/confirmarPwd" />
	
	<ProgressBar
			android:id="@+id/progresBarCambioPwd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"/>


</android.support.constraint.ConstraintLayout>