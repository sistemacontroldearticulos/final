<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:id="@+id/fondoInicio"
    tools:context="com.proyecto.aplicacion.Inicio">

    <!-- TODO: Update blank fragment layout -->
	<ImageView
		android:id="@+id/muñeco"
		android:layout_width="308dp"

		android:layout_height="278dp"
		android:layout_marginEnd="36dp"
		android:layout_marginBottom="4dp"
		android:src="@drawable/prueba"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<TextView
		android:id="@+id/txtBienvenida"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="60dp"
		android:layout_marginEnd="8dp"
		android:text="SADADSA"
		android:textAlignment="center"
		android:textColor="#000"
		android:textSize="25dp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtInfo"
		android:layout_width="311dp"
		android:layout_height="190dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="12dp"
		android:layout_marginEnd="8dp"
		android:text="Con SISTEMA CONTROL DE ARTICULOS usted podrá
generar novedades por pérdida o daños de los implementos que se encuentran en los ambientes\n\n Además, tambien podrá generar áctas de responsabilidad donde cada aprendiz se hará cargo del equipo que fué asignado."
		android:textAlignment="center"
		android:textColor="#000"
		android:textSize="16dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.757"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/txtBienvenida" />
	
	
	<TextView
			android:id="@+id/txtDeslice"
			android:layout_width="122dp"
			android:layout_height="60dp"
			android:textColor="#fff"
			android:textSize="14dp"
			android:text="Deslice el menú lateral para ver las opciones"
			android:textAlignment="center"
			app:layout_constraintBottom_toBottomOf="@+id/muñeco"
			app:layout_constraintTop_toTopOf="@+id/muñeco"
			app:layout_constraintEnd_toEndOf="@+id/muñeco"
			app:layout_constraintStart_toStartOf="@+id/muñeco"
			app:layout_constraintHorizontal_bias="0.775"
			app:layout_constraintVertical_bias="0.916"/>


</android.support.constraint.ConstraintLayout>
