<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp">

  <TableLayout
      android:id="@+id/tabla_cuerpo"
      android:layout_width="355dp"
      android:layout_height="30dp"
      android:layout_marginStart="4dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="4dp"
      android:layout_marginBottom="4dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.46"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/txtArticulo"
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:background="@drawable/cell_shape2"
          android:padding="8dp"
          android:text="TextView"
          android:textAlignment="center"
          android:textColor="#000"
          android:textSize="10dp"></TextView>

      <TextView
          android:id="@+id/txtTipoNovedad"
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:background="@drawable/cell_shape2"
          android:padding="8dp"
          android:text="TextView"
          android:textAlignment="center"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="#000"
          android:textSize="10dp"></TextView>

      <TextView
          android:id="@+id/txtEquipo"
          android:layout_width="73dp"
          android:layout_height="match_parent"
          android:background="@drawable/cell_shape2"
          android:padding="8dp"
          android:text="TextView"
          android:textAlignment="center"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="#000"
          android:textSize="10dp"></TextView>

      <TextView

          android:id="@+id/txtJornada"
          android:layout_width="85dp"
          android:layout_height="match_parent"
          android:background="@drawable/cell_shape2"
          android:padding="8dp"
          android:text="Melany Alejandra Rojas Troyano"
          android:textAlignment="center"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="#000"
          android:textSize="8dp"></TextView>

      <TextView
          android:id="@+id/iconoEliminar"
          android:layout_width="28dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="3dp"
          android:background="@drawable/icono_eliminar"
          android:visibility="visible"
          tools:layout_editor_absoluteX="56dp"
          tools:layout_editor_absoluteY="55dp"></TextView>


    </TableRow>
  </TableLayout>


</android.support.constraint.ConstraintLayout>